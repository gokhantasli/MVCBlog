@{
    Layout = null;
}
@model IEnumerable<MVCBlog.ENTITY.Tag>

<div class="sidebox widget">
    <h3 class="widget-title section-title">Tags</h3>
    <ul class="tag-list">
        @foreach (MVCBlog.ENTITY.Tag tag in Model)
        {
            <li><a href="/Tag/Index/@tag.Id">@tag.TagName (@tag.Articles.Count)</a></li>
        }
    </ul>

</div>
