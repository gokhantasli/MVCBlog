@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="/Content/style/images/favicon.png">
    <title>Flight Blog - @ViewBag.Title</title>
    <!-- Bootstrap core CSS -->
    <link href="/Content/style/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/style/css/plugins.css" rel="stylesheet">
    <link href="/Content/style.css" rel="stylesheet">
    <link href="/Content/style/css/color/red.css" rel="stylesheet">
    <link href="/Content/style/type/bebas.css" rel="stylesheet">
    <link href="/Content/style/type/fontello.css" rel="stylesheet">
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
          <script src="style/js/html5shiv.js"></script>
          <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
          <![endif]-->
    @RenderSection("head", false)
</head>
<body>
    <div id="preloader"><div id="status"><div class="spinner"></div></div></div>
    <div class="body-wrapper">
        <div class="navbar default">
            <div class="navbar-header">
                <div class="container">
                    <div class="basic-wrapper">
                        <a class="btn responsive-menu pull-right" data-toggle="collapse" data-target=".navbar-collapse"><i></i></a>
                        <div class="navbar-brand"><a href="index.html"><img src="/Content/style/images/logo.png" alt="" data-src="/Content/style/images/logo.png" data-ret="/Content/style/images/logo@2x.png" class="retina" /></a></div>
                    </div>
                    <nav class="collapse navbar-collapse pull-right">
                        <ul class="nav navbar-nav">
                            <li><a href="/Home/Index">Home</a></li>
                            <li>
                                <a href="/Article/AddArticle">AddArticle</a>
                            </li>
                            @if (Session["Username"] != null)
                            {
                                <li><a href="/Article/MyArticles/@Session["Username"]">MyArticles</a></li>
                            }
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle js-activated">Categories</a>
                                <ul class="dropdown-menu">
                                    @{ Html.RenderAction("CategoryLayoutWidget", "Category");}
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle js-activated">About Us</a>
                                <ul class="dropdown-menu">
                                    <li><a href="about.html">About</a></li>
                                    <li><a href="services.html">Services</a></li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle js-activated"></a>
                                <ul class="dropdown-menu">
                                    <li><a href="elements.html">Elements</a></li>
                                    <li><a href="headings.html">Headings</a></li>
                                    <li><a href="pricing.html">Pricing Tables</a></li>
                                    <li><a href="flat-icons.html">Flat Icons</a></li>
                                    <li><a href="font-icons.html">Font Icons</a></li>
                                </ul>
                            </li>
                            @if (Session["Username"] == null)
                            {
                                <li><a href="/User/Index">Login</a></li>
                            }
                            else
                            {
                                <li><a href="/User/Logout">Logout</a></li>
                            }
                            <li class="dropdown social-dropdown pull-right">
                                <div class="share btn btn-default dropdown-toggle" data-toggle="dropdown"><i class="icon-heart-1"></i></div>
                                <ul class="button-group dropdown-menu dropdown-menu-right share-links">
                                    <li><a href="#" class="btn"><i class="icon-s-facebook"></i></a></li>
                                    <li><a href="#" class="btn"><i class="icon-s-twitter"></i></a></li>
                                    <li><a href="#" class="btn"><i class="icon-s-pinterest"></i></a></li>
                                </ul>
                            </li>
                            <!--/social-dropdown -->
                        </ul>
                        <!--/.navbar-nav -->
                    </nav>
                    <!--/.nav-collapse -->
                </div>
                <!--/.container -->
            </div>
            <!--/.navbar-header -->
        </div>
        <!--/.navbar -->
        @if (Session["Username"] != null)
        {
            <div class="offset"></div>
            <div class="dark-wrapper page-title">
                <div class="container inner">
                    <h1> Welcome @Session["Username"].ToString()!</h1>
                </div>
                <!--/.container -->
            </div>
        }
        else
        {
            <div class="offset"></div>
            <div class="dark-wrapper page-title">
                <div class="container inner">
                    <h1> Flight Blog </h1>
                </div>
                <!--/.container -->
            </div>
        }

        <!--/.page-title -->

        <div class="container inner">
            <div class="row">

                <div class="col-sm-8 content">
                    @RenderBody()
                </div>
                <!-- /.content -->
                <aside class="col-sm-4 sidebar lp30">
                    @{ Html.RenderAction("PopularArticleListWidget", "Home");}
                    <!-- /.widget -->
                    @{ Html.RenderPartial("SiteHakkinda");}
                    <!-- /.widget -->
                    @{ Html.RenderPartial("Search");}
                    <!-- /.widget -->
                    @{ Html.RenderAction("CategoryWidget", "Category");}
                    <!-- /.widget -->
                    @{ Html.RenderAction("TagWidget", "Tag");}
                    <!-- /.widget -->
                </aside>
                <!-- /.col-sm-4 .sidebar -->

            </div>
            <!-- /.row -->
        </div>
        <!--/.container -->
        <footer class="footer black-wrapper">
            <div class="container inner">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="widget">
                            @{ Html.RenderAction("PopularArticleListWidget", "Home");}
                            <!-- /.post-list -->
                        </div>
                        <!-- /.widget -->
                    </div>
                    <!-- /column -->

                    <div class="col-sm-3">
                        <div class="widget">
                            <h3 class="widget-title">About Us</h3>
                            <p>Aenean lacinia bibendum nulla sed leo posuere erat a ante venenatis dapibus posuere velit aliquet. Donec ullamcorper metus auctor fringi. Nullam quis risus. </p>
                            <p>Vestibulum id ligula porta  euismod semper. Maecenas faucibus mollis.</p>
                            <div class="divide5"></div>
                            <ul class="social">
                                <li><a href="#"><i class="icon-s-rss"></i></a></li>
                                <li><a href="#"><i class="icon-s-twitter"></i></a></li>
                                <li><a href="#"><i class="icon-s-facebook"></i></a></li>
                                <li><a href="#"><i class="icon-s-pinterest"></i></a></li>
                                <li><a href="#"><i class="icon-s-linkedin"></i></a></li>
                            </ul>
                        </div>
                        <!-- /.widget -->
                    </div>
                    <!-- /column -->

                    <div class="col-sm-3">
                        <div class="widget">
                            <h3 class="widget-title">Get In Touch</h3>
                            <p>Fusce dapibus, tellus commodo, tortor mauris condimentum utellus fermentum, porta sem malesuada magna. Sed posuere consectetur est at lobortis.</p>
                            <div class="contact-info">
                                <i class="icon-location"></i> Moonshine St. 14/05 Light City <br />
                                <i class="icon-phone"></i>+00 (123) 456 78 90 <br />
                                <i class="icon-mobile"></i>+80 (547) 455 47 54 <br />
                                <i class="icon-mail"></i> <a href="first.last@email.com">first.last@email.com</a>
                            </div>
                        </div>
                    </div>
                    <!-- /column -->

                    <div class="col-sm-3">
                        @{ Html.RenderAction("TagWidget", "Tag");}
                        <!-- /.widget -->

                        @{ Html.RenderAction("CategoryWidget", "Category");}
                        <!-- /.widget -->

                    </div>
                    <!-- /column -->

                </div>
                <!-- /.row -->
            </div>
            <!-- .container -->

            <div class="sub-footer">
                <div class="container">
                    <p class="pull-left">© 2019 All rights reserved.</p>
                    <ul class="footer-menu pull-right">
                        <li><a href="/Home/Index">Home</a></li>
                        <li><a href="#">About</a></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                </div>
            </div>
        </footer>
        <!-- /footer -->
    </div>
    <!--/.body-wrapper -->
    <script src="/Content/style/js/jquery.min.js"></script>
    <script src="/Content/style/js/bootstrap.min.js"></script>
    <script src="/Content/style/js/plugins.js"></script>
    <script src="/Content/style/js/scripts.js"></script>
</body>
</html>